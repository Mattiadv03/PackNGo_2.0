<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackNGo.ComponiValigia">
    <VerticalStackLayout>
        <!-- Titolo -->
        <Label
            x:Name="labelTitolo_ComponiValigia"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            HorizontalOptions="Center" />
        
        <!-- Inserisco gli elementi della valigia dinamicamente -->
        <StackLayout x:Name="layoutElementi_ComponiValigia" HorizontalOptions="Center" />


        <!-- Seleziona/Deseleziona -->
        <Button
            x:Name="buttonSelezioneDeseleziona_ComponiValigia"
            Text="Seleziona tutto"
            HorizontalOptions="Center"
            Clicked="ButtonSelezioneDeseleziona_ComponiValigia_Clicked" />
        
        <!-- Torna indietro -->
        <Button
            x:Name="buttonTornaIndietro_ComponiValigia"
            Text="Torna indietro"
            HorizontalOptions="Center"
            Clicked="ButtonTornaIndietro_ComponiValigia_Clicked" />
    </VerticalStackLayout>
</ContentPage>