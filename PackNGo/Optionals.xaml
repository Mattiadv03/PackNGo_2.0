<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackNGo.Optionals" >
    <VerticalStackLayout>
        <!-- Titolo -->
        <Label
            Text="Scegli gli optionals"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            HorizontalOptions="Center" />

        <!-- Popolo gli optionals dinamicamente in base alle tipologie -->
        <FlexLayout x:Name="flexLayoutTipologie_Optionals" HorizontalOptions="Center" Direction="Column" VerticalOptions="Start" />

        <!-- Componi -->
        <Button 
            x:Name="buttonComponi_Optionals"
            Text="Componi"
            HorizontalOptions="Center"
            Clicked="ButtonComponi_Optionals_Clicked" />
        
        <!-- Torna indietro -->
        <Button
            x:Name="buttonTornaIndietro_Optionals"
            Text="Torna indietro"
            HorizontalOptions="Center"
            Clicked="ButtonTornaIndietro_Optionals_Clicked" />
    </VerticalStackLayout>
</ContentPage>