<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackNGo.Optionals" >
    <VerticalStackLayout>
        <!-- Titolo -->
        <Label
            Text="Scegli gli optionals"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            HorizontalOptions="Center" />

        <!-- Optionals -->
        <FlexLayout x:Name="flexLayoutTipologie_Optionals" JustifyContent="Center" HorizontalOptions="Center" Direction="Column" VerticalOptions="Start">
            <!-- Popolo dinamicamente in base alle tipologie -->
        </FlexLayout>

        <!-- Torna indietro -->
        <Button
            x:Name="buttonTornaIndietro_Optionals"
            Text="Torna indietro"
            HorizontalOptions="Center"
            Clicked="ButtonTornaIndietro_Optionals_Clicked" />
    </VerticalStackLayout>
</ContentPage>