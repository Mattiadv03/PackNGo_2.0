<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackNGo.ScegliTipologia" >
    <VerticalStackLayout>
        <!-- Titolo -->
        <Label
            Text="Scegli la tipologia"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            HorizontalOptions="Center" />

        <!-- Tipologie -->
        <FlexLayout x:Name="flexLayoutTipologie_ScegliTipologia" JustifyContent="Center" Wrap="Wrap" VerticalOptions="Start">
            <!-- Popolo dinamicamente in base alle tipologie -->
        </FlexLayout>

        <!-- Torna indietro -->
        <Button
            x:Name="buttonTornaIndietro_CreaVacanza"
            Text="Torna indietro"
            HorizontalOptions="Center"
            Clicked="ButtonTornaIndietro_CreaVacanza_Clicked" />
    </VerticalStackLayout>
</ContentPage>